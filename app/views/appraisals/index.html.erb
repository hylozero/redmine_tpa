<%= render 'layout/prepend' %>

<% if @appraisals.any? %>
	<table class="table table-hover">
		<thead>
			<th>Nome</th>
		</thead>
		<tbody>
			<% @appraisals.each do |a| %>
				<td><%= a.name %></td>
			<% end %>
		</tbody>
	</table>
	
<% else %>
	<div id='flash_warning' class='flash warning'><%=t('no_appraisals_found')%></div>
<% end %>

<%= render 'layout/append' %>