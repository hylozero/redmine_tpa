<%= render 'layout/prepend' %>
<%- model_class = Appraisal -%>

<% if @appraisals.any? %>
	<table class="table table-hover">
		<thead>
			<th><%= model_class.human_attribute_name(:name) %>:</th>
		</thead>
		<tbody>
			<% @appraisals.each do |a| %>
			<tr>
				<td><%= link_to a.name, appraisals_template_path(a) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

<% else %>
	<div id='flash_error' class='flash error'><%=t('no_appraisals_templates_found')%></div>
<% end %>

<%= render partial: 'layout/append', locals: {create_url: new_appraisals_template_path} %>