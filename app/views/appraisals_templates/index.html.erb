<%= render 'layout/prepend' %>
<%- model_class = Appraisal -%>

<% if @appraisals.any? %>
	<table class="table table-hover">
		<thead>
			<th><%= t('appraisal_template_name') %>:</th>
			<th><%= t('appraisal_template_author') %>:</th>
		</thead>
		<tbody>
			<% @appraisals.each do |a| %>
			<tr>
				<td><%= link_to a.name, appraisals_template_path(a) %></td>
				<td><%= a.author.login %> - <%=a.author.name%></td>
			</tr>
			<% end %>
		</tbody>
	</table>

<% else %>
	<div id='flash_warning' class='flash warning'><%=t('no_appraisals_templates_found')%></div>
<% end %>

<%= render partial: 'layout/append', locals: {create_url: new_appraisals_template_path} %>